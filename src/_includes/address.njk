<address class="storeinfo" itemscope itemtype="https://schema.org/Organization">
    {% if meta.address.name %}
        <div itemprop="name" class="h4">{{ meta.address.name }}</div>
    {% endif %}
    <div itemprop="address" class="mb-2" itemscope itemtype="https://schema.org/PostalAddress">
        {% if meta.address.street %}
            <span itemprop="streetAddress">{{ meta.address.street }}</span><br>
        {% endif %}
        {% if meta.address.postcode %}
            <span class="postcode" itemprop="postalCode">{{ meta.address.postcode }}</span>
        {% endif %}
        {% if meta.address.city %}
            <span class="city" itemprop="addressLocality">{{ meta.address.city }}</span><br>
        {% endif %}
        {% if meta.address.country %}
            {% if meta.address.region %}
                <span class="region" itemprop="addressRegion">{{ meta.address.region }},</span>
            {% endif %}
            <span class="country" itemprop="addressCountry">{{ meta.address.country }}</span>
        {% endif %}
    </div>
    {% if meta.email %}
        <div>
            <span class="weight-bold">Mail: </span>
            <a href="mailto:{{ meta.email }}">{{ meta.email }}</a>
        </div>
    {% endif %}
    {% if meta.tel %}
        <div class="mb-2">
            <span class="weight-bold">Tel: </span>
            <a href="tel:{{ meta.tel }}">{{ meta.tel }}</a>
        </div>
    {% endif %}
</address>
